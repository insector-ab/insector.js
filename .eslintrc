{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "extends": "standard",
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": ["error", "always"],
        "space-before-function-paren": "off",
        "padded-blocks": "off",
        "import/no-webpack-loader-syntax": "off",
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1
    }
}
